# ServiceNow Configuration
# Copy this file to .env and update with your values

# ServiceNow Instance URL (without trailing slash)
VITE_SERVICENOW_INSTANCE=https://your-instance.service-now.com

# API Base Path
VITE_API_BASE=/api/now

# Enable Mock Data (true/false)
# When true, app will use mock data instead of ServiceNow API
VITE_USE_MOCK_DATA=false

# Application Settings
VITE_APP_TITLE=Advisor Assistant
VITE_PAGE_SIZE=9

# Feature Flags
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_NOTIFICATIONS=false

# Development Settings
VITE_LOG_LEVEL=info
VITE_DEBUG_MODE=false
